{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve-dev",
      "type": "shell",
      "command": ["pnpm serve"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "launch-dev",
      "type": "shell",
      "command":["npx tsup --watch --env.NODE_ENV dev"],
      "args": ["--debug"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "launch-parallel",
      "type": "process",
      "dependsOn":["serve-dev","launch-dev"],
      "presentation":{
        "reveal":"always",
        "revealProblems":"never",
        "panel":"new"
     }
    }
  ]
}
