{
	"compilerOptions": {
		"target": "ES2015",
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"outDir": "dist",
		"baseUrl": ".",
		"rootDir": "src",
		"types": ["node"],
		"typeRoots": ["./node_modules/@types", "./node_modules/@repo/env-types"],
		"lib": ["esnext"],
		"paths": {
			"#/*": ["./src/*"]
		}
	},
	"include": ["src", "./node_modules/@repo/env-types/global/cli-env.d.ts"],
	"exclude": ["node_modules", "dist"]
}
