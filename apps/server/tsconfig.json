{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"outDir": "dist",
		"baseUrl": ".",
		"rootDir": "src",
		"types": ["node"],
		"typeRoots": ["./node_modules/@types"],
		"lib": ["esnext"],
		"paths": {
			"#/*": ["./src/*"]
		}
	},
	"include": ["src", "./env.d.ts"],
	"exclude": ["node_modules", "dist"]
}
